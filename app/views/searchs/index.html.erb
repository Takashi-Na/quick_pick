<div class="wrapper">
  <%# header %>
  <div class="header">
    <%= render "shared/header" %>
  </div>

  <%# フォーム %>
  <div class="search-area">
    <div class="form-area">
      <div class="search_container">
        <%# ラベルをつける（divが必要？） %>
        <input type="text" size="25" placeholder=" 場所" id="addressInput" value="東京駅">
        <input type="text" size="25" placeholder=" キーワード" id="keywordInput" value="寿司">
        <select id="radiusInput" class="distance">
          <option value="200" selected>200 m</option>
          <option value="500">500 m</option>
          <option value="800">800 m</option>
          <option value="1000">1.0 km</option>
          <option value="1500">1.5 km</option>
          <option value="2000">2.0 km</option>
        <select>
        <input type="button" value="&#xf002" id="getPlace">
      </div>
    </div>
  </div>

  <%# 結果表示＆マップ %>
  <div class="result-map-area">

    <%# 結果 %>
    <div class="result-area">
      <div class="rank_tittle_area">
        <div class="rank_tittle">
          <%= image_tag "crown.png", class: "crown"%>ランキング
        </div>
      </div>
      <div class="result_frame" id="results">
      </div>
    </div>

    <%# マップ %>
    <div class="map-area" id="mapArea">
      <script src="https://maps.googleapis.com/maps/api/js?key=<%=ENV['GOOGLE_MAP_API']%>&libraries=places&callback=initMap" async defer></script>
    </div>
  </div>

  <%# フッター %>
  <div class="footer">
    <%= render "shared/footer" %>
  </div>
</div>